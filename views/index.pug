include ./partials/header

section.main-wrapper
    div.main-display

        div.tasker-display
            section.tasker-header-wrapper
                div.tasker-header-display
                    h1 todos

            section.task-wrapper
                div.task-display
                    div.task-create
                        div.col
                        input(type="text" placeholder="what needs to be done?")
                    section.task-todos-display

                section.tasker-buttons
                    button#save-todos Save
                    button.more-todos Lists
                    button#remove-todos Clear

        div.main-list-display

            section.tasker-header-wrapper
                div.tasker-header-display
                    h1 Lists
            section.list-wrapper
                div.list-display
                  - if (user) {
                    - user.list.forEach(function(item) {
                        div.task-control
                          div.col: i(class="fa fa-circle-thin")
                          p #{item.title}
                          div.col-delete: i(class="fa fa-times")
                    - });
                  -  }

                section.tasker-buttons
                    button.more-todos Lists


include ./partials/footer
